<?xml version="1.0"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.github.cchacin</groupId>
  <artifactId>basepom</artifactId>
  <version>0.0.1</version>
  <packaging>pom</packaging>
  <name>Base POM</name>
  <description>Base POM for Maven Java Projects</description>
  <url>https://github.com/cchacin/base-pom</url>
  <inceptionYear>2014</inceptionYear>
  <licenses>
    <license>
      <name>Apache v2</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0.html</url>
      <distribution>manual</distribution>
    </license>
  </licenses>
  <developers>
    <developer>
      <id>cchacin</id>
      <name>Carlos Chacin</name>
      <email>cchacin@gmail.com</email>
      <roles>
        <role>Developer</role>
      </roles>
      <timezone>-4</timezone>
    </developer>
  </developers>
  <prerequisites>
    <maven>3.0.1</maven>
  </prerequisites>
  <scm>
    <connection>scm:git:git@github.com:cchacin/base-pom.git</connection>
    <developerConnection>scm:git:git@github.com:cchacin/base-pom.git</developerConnection>
    <url>scm:git:git@github.com:cchacin/base-pom.git</url>
  </scm>
  <properties>
    <basepom.plugin.shade.version>2.3</basepom.plugin.shade.version>
    <basepom.plugin.dependency.version>2.8</basepom.plugin.dependency.version>
    <basepom.build.memory.initial>1024m</basepom.build.memory.initial>
    <basepom.plugin.cobertura.version>2.6</basepom.plugin.cobertura.version>
    <basepom.plugin.source.version>2.3</basepom.plugin.source.version>
    <basepom.plugin.resources.version>2.6</basepom.plugin.resources.version>
    <basepom.plugin.javadoc.version>2.9.1</basepom.plugin.javadoc.version>
    <basepom.plugin.clean.version>2.5</basepom.plugin.clean.version>
    <basepom.plugin.jar.version>2.5</basepom.plugin.jar.version>
    <basepom.plugin.exec.version>1.3.2</basepom.plugin.exec.version>
    <basepom.plugin.checkstyle.version>2.12.1</basepom.plugin.checkstyle.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <basepom.plugin.deploy.version>2.8.1</basepom.plugin.deploy.version>
    <basepom.plugin.site.version>3.4</basepom.plugin.site.version>
    <basepom.plugin.failsafe.version>2.17</basepom.plugin.failsafe.version>
    <basepom.plugin.dependency-versions-check.version>2.0.2</basepom.plugin.dependency-versions-check.version>
    <basepom.plugin.assembly.version>2.4.1</basepom.plugin.assembly.version>
    <basepom.plugin.enforcer.version>1.3.1</basepom.plugin.enforcer.version>
    <basepom.plugin.pmd.version>3.2</basepom.plugin.pmd.version>
    <basepom.plugin.release.version>2.5</basepom.plugin.release.version>
    <project.reporting.inputEncoding>UTF-8</project.reporting.inputEncoding>
    <basepom.plugin.surefire.version>2.17</basepom.plugin.surefire.version>
    <basepom.maven.version>3.0.1</basepom.maven.version>
    <project.build.targetJdk>1.7</project.build.targetJdk>
    <basepom.plugin.compiler.version>3.1</basepom.plugin.compiler.version>
    <basepom.plugin.buildnumer.version>1.3</basepom.plugin.buildnumer.version>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    <basepom.plugin.scm.version>1.9.1</basepom.plugin.scm.version>
    <basepom.build.memory.max>1024m</basepom.build.memory.max>
    <basepom.plugin.duplicate-finder.version>1.0.7</basepom.plugin.duplicate-finder.version>
    <basepom.plugin.install.version>2.5.1</basepom.plugin.install.version>
    <basepom.plugin.versions.version>2.1</basepom.plugin.versions.version>
    <basepom.plugin.findbugs.version>3.0.0</basepom.plugin.findbugs.version>
    <basepom.plugin.git-commit-id.version>2.1.10</basepom.plugin.git-commit-id.version>
    <basepom.plugin.gpg.version>1.4</basepom.plugin.gpg.version>
  </properties>
  <repositories>
    <repository>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <id>central</id>
      <name>Central Repository</name>
      <url>http://repo.maven.apache.org/maven2</url>
    </repository>
  </repositories>
  <pluginRepositories>
    <pluginRepository>
      <releases>
        <updatePolicy>never</updatePolicy>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <id>central</id>
      <name>Central Repository</name>
      <url>http://repo.maven.apache.org/maven2</url>
    </pluginRepository>
  </pluginRepositories>
  <build>
    <sourceDirectory>src/main/java</sourceDirectory>
    <scriptSourceDirectory>/Users/carlos/Git/base-pom/src/main/scripts</scriptSourceDirectory>
    <testSourceDirectory>src/test/java</testSourceDirectory>
    <outputDirectory>target/classes</outputDirectory>
    <testOutputDirectory>target/test-classes</testOutputDirectory>
    <resources>
      <resource>
        <filtering>true</filtering>
        <directory>src/main/resources</directory>
      </resource>
    </resources>
    <testResources>
      <testResource>
        <filtering>true</filtering>
        <directory>src/test/resources</directory>
      </testResource>
    </testResources>
    <directory>target</directory>
    <finalName>basepom-0.0.1-${buildNumber}</finalName>
  </build>
  <reporting>
    <outputDirectory>target/site</outputDirectory>
  </reporting>
</project>
